package pattern;

public class patternIneuron {
	static int height = 5;
	 
	// Number of character width in each line
	static int width = (2 * height) - 1;

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int i, j;
	    for (i = 0; i < height; i++)
	    {
	        for (j = 0; j < height; j++)
	        {
	            if (i == 0 || i == height - 1)
	                System.out.printf("*");
	            else if (j == height / 2)
	                System.out.printf("*");
	            else
	                System.out.printf(" ");
	        }
	        System.out.printf("\n");
	    }

	}

}
