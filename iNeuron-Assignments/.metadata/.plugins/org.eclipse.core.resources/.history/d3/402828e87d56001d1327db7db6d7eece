package pattern;

public class patternBottomDiamond {
	
	public static void main(String[] args) {
		int n=8;
		for(int i=n; i>=1; i--)
	     {
	         for(int j=i; j<n; j++)
	         {
	             System.out.print("*");
	         } 
	         for(int k=1; k<=(2*i); k++)
	         {
	            
	             System.out.print(" ");
		         
	         } 
	         for(int j=i; j<n; j++)
	         {
	             System.out.print("*");
	         }
	        
	         System.out.println();
	     }
		for(int i=1;i<=n/3;i++) {
			for(int j=1;j<=2*n;j++) {
				System.out.print("*");
			}
			System.out.println(" ");
		}
	}
}
