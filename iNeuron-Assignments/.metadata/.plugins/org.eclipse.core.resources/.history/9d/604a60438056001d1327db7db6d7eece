package pattern;

public class patternSideDiamond {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int i,j,k,num=7;
		for(i=-num;i<=num;i++)
		{
		      k=i;
		if(k<0)
		{
		         k = k * -1;
		}
		for (j = 0; j < num; ++j)
		{
		if (j<k)
		{
		System.out.print("* ");
		}
		else
		{
			System.out.print("  ");   
		}
		}
		System.out.println("");
		}

	}

}
